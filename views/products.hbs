<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel = "stylesheet" href="/css/bootstrap.css">
    <script src="/js/jquery-3.1.1.js"></script>
    <script src="/js/bootstrap.js" ></script>
    <script src="/js/products.js"></script>
    <title>Document</title>
</head>
<body>
<div class="container">
    <div class="jumbotron">
        <h1>Products</h1>
        <p> Add your Products Here ... </p>
        <button class="btn btn-primary btn-lg add">Add item</button>
    </div>
</div>
    <div class="additems input-group container">
        <form method="post">
            <div class="row">
                <div class="col-lg-4"><input type="text" class = "form-control " placeholder="Add Item Name" name="product"></div>
                <div class="col-lg-4"><input type="number" class="form-control " placeholder="Add price" name="price"></div>
                <div class="col-lg-4"><button class="btn btn-primary" formaction="/additems">Add Item</button></div>
            </div>
        </form>
    </div>
        <div class="container ">
            {{#each products}}
                    <div class="panel panel-default">
                    <div class="panel-body">
                        <span class="pull-left">{{product}}</span>
                        <span class="pull-right">Rs.{{price}}</span>

                    </div>
                        <button class="panel-footer btn btn-primary btn-default pull-right" formmethod="post" formaction="/delete">Delete</button>
                    </div>
                {{/each}}
        </div>

</body>
</html>