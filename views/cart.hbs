<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel = "stylesheet" href="/css/bootstrap.css">
    <script src="/js/jquery-3.1.1.js"></script>
    <script src="/js/bootstrap.js" ></script>
    <script src="/js/products.js"></script>
    <script src ="/js/cart.js"></script>
    <title>Cart</title>
</head>
<body>
<div class="jumbotron container">
    <h1>Shopping Cart </h1>
    <p>Add products to your cart in here ...</p>
</div>

{{#each products}}

 <div class="container">
    <div class="panel panel-default col-md-4">
        <div class="panel-body">
            <span class="pull-left" id = "product">{{product}}</span>
            <span class="pull-right" >Rs.<span id="price">{{price}}</span></span>
        </div>
        <div class="panel-footer"><button class="btn btn-primary pull-right add-items">Add item</button></div>
    </div>
    </div>
{{/each}}

<div class="container">
    <table class="table">
        <thead>
            <tr>
                <th>#</th>
                <th>Product</th>
                <th>Quantity</th>
                <th>Rate</th>
                <th>cost</th>
            </tr>
        </thead>

        <tbody class="show-cart">

        </tbody>

        <tr>
            <td colspan="3">Total</td><td ><span id="total-cart"></span></td>
        </tr>

    </table>
</div>

</body>
</html>